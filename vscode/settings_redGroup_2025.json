{
	// ========== APPEARANCE ==========
	"window.zoomLevel": 0.33,
	"window.commandCenter": false, // панель инструментов
	"workbench.layoutControl.enabled": false, // панель с иконками справа вверху
	"window.density.editorTabHeight": "default", // высота вкладок default|compact
	"editor.minimap.enabled": false,
	"workbench.colorTheme": "Darcula",
	"workbench.iconTheme": "quill-icons", // catppuccin-perfect-sequoia"|"Bearded Theme HC Minuit",
	"workbench.productIconTheme": "el-vsc-v1-icons", // убрать иконки с вкладок; tool panel icons "fluent-icons"

	"symbols.hidesExplorerArrows": false, // убрать стрелки в панели файлов
	"workbench.activityBar.location": "hidden", // скрыть левую вертикальную панель
	"workbench.editor.editorActionsLocation": "hidden", // скрыть иконки

	// Cursor
	"editor.cursorBlinking": "expand", // мигающий
	"editor.cursorStyle": "line-thin", // тонкий
	"editor.cursorSmoothCaretAnimation": "explicit",

	"editor.bracketPairColorization.enabled": false, // иначе тормозит редактор
	"editor.glyphMargin": false, // отступ слева от нумерации строк
	"editor.scrollbar.horizontal": "hidden", // скрыть линейки прокрутки
	"editor.scrollbar.vertical": "hidden",

	// --------- FONTS ========
	//"editor.fontFamily": "Fira Code Light, MesloLGS Nerd Font Mono, UbuntuMono Nerd Font Mono2, losevka Nerd Font Mono, RobotoMono Nerd Font Mono, JetBrains Mono, Monaspace Neon, Maple Mono, MonoLisa, Operator mono lig, Roboto Mono, DejaVu Sans Mono, Pragmata Pro Mono, Fira Code, monoki, Hasklig, IBM Plex Mono, Victor Mono, monospace", // шрифт подсказок
	"editor.fontFamily": "Fira Code Light, MesloLGS Nerd Font Mono, JetBrains Mono, PragmataPro Mono Liga, Maple Mono, Cascadia Code, IBM Plex Mono, MonoLisa, Fira Code, Serala, monospace", // для расширения "Swuitch Font", позволяющего менять шрифты
	"editor.fontSize": 12,
	"editor.fontWeight": "400",
	"editor.lineHeight": 22, // регулирует межстрочный интервал
	"editor.fontLigatures": true,
	"editor.inlayHints.fontFamily": "PragmataPro",
	"chat.editor.fontFamily": "PragmataPro",
	"editor.codeLensFontFamily": "PragmataPro",
	"debug.console.fontFamily": "PragmataPro",

	// ======== ПОДСВЕТКА СИНТАКСИСА ======
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": [
					"comment",
					"entity.name.type.class",
					"keyword",
					"constant",
					"storage.modifier",
					"storage.type.class.js"
				],
				"settings": {
					"fontStyle": "italic"
				}
			},
			{
				"scope": [
					"invalid",
					"keyword.operator",
					"constant.numeric.css",
					"keyword.other.unit.px.css",
					"constant.numeric.decimal.js",
					"constant.numeric.json"
				],
				"settings": {
					"fontStyle": ""
				}
			}
		]
	},

	// ========== EDITOR BEHAVIOUR ==========>
	"editor.accessibilitySupport": "off",
	"window.openFilesInNewWindow": "off",
	"editor.hideCursorInOverviewRuler": true,

	// разрешенные символы для Unicode Highlight
	"editor.unicodeHighlight.allowedCharacters": {
		"а": true,
		"с": true,
		"Т": true,
		"б": true,
		"е": true,
		" ": true
	},

	// переносы слов
	"editor.wordWrap": "bounded",
	"editor.wrappingIndent": "same",
	"editor.wordWrapColumn": 120,

	"editor.tabSize": 2,
	"editor.folding": false, // возможность сжатия блоков текста
	"editor.insertSpaces": false, // использовать пробелы вместо Tab
	"editor.smoothScrolling": true,

	"editor.detectIndentation": true,
	"editor.renderControlCharacters": false, // не отображать спецсимволы
	"editor.suggestSelection": "first", // выбирать сразу первый элемент
	"editor.scrollBeyondLastLine": true, // прокручивать окно ниже последней строки
	"editor.multiCursorModifier": "ctrlCmd", // a Alt+click use to open object under cursor
	"editor.quickSuggestionsDelay": 0, // минимальная задержка для  InteliSense
	// управляет подсветкой символов, еоторые можно спутать
	// с основными символаvb ASCII, кроме тех, которые
	// являются общими для текущего пользовательского языкового стандарта
	"editor.unicodeHighlight.ambiguousCharacters": false,

	// ========== HTML|JAVASCRIPT|TYPESCRIPT ==========>
	// auto closing tags
	"html.autoClosingTags": true,
	"javascript.autoClosingTags": true,
	"typescript.autoClosingTags": true,
	"editor.linkedEditing": true, // связаннjое редактирования html-тегов
	"html.completion.attributeDefaultValue": "singlequotes", // использовать для html одинарыне кавычки вместо двойных
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"javascript.preferences.quoteStyle": "single",
	"typescript.preferences.quoteStyle": "single",
	"javascript.format.semicolons": "remove", // удалять в конце ;
	"typescript.format.semicolons": "remove",
	"js/ts.implicitProjectConfig.experimentalDecorators": true, // при использовании декораторов

	// ========== TERMINAL ==========
	"terminal.integrated.fontFamily": "PragmataPro, Iosevka Nerd Font Mono",
	"terminal.integrated.fontSize": 14,
	"terminal.integrated.tabs.enabled": false,
	"terminal.integrated.cursorStyle": "line",

	// ========== EXPLORER ==========
	"explorer.confirmDelete": true,
	"explorer.compactFolders": false, // чтобы открывались пустые папки
	"explorer.confirmDragAndDrop": true,
	"workbench.editor.tabSizing": "shrink", // уменьшать табы, если мало места
	"workbench.startupEditor": "newUntitledFile", // открыть пустой файл при запуске редактора
	// скрыть эти папки (по умолчанию скрыты .git,.svn,.hg,CVS,.DS_Store.Thumbs.db)
	"files.exclude": {
		"**/.expo": true,
		"**/.expo-shared": true,
		"**/.idea": true,
		"**/.nuxt": true
	},

	// ========== ФОРМАТИРОВАНИЕ ==========
	"editor.inlineSuggest.enabled": true, // подсказки
	"prettier.semi": false,
	"prettier.useTabs": true,
	"editor.formatOnSave": true,
	"prettier.singleQuote": true, // одинарные кавычки вместо двойных
	"prettier.jsxSingleQuote": true,
	"editor.codeActionsOnSave": {
		"source.organizeImports": "explicit"
	},
	"prettier.arrowParens": "avoid",
	"editor.defaultFormatter": "esbenp.prettier-vscode",

